<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".studentComplaint.InsertNewComplaint">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/ComplaintStatusName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/choose_complaint_status"
            android:textColor="#000"
            android:textStyle="bold"
            />
        <Spinner
            android:id="@+id/insertComplaintSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textAlignment="center" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    >
                    <!--<TextView
                        android:id="@+id/ComplaintStatusName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:text="@string/complaint_status_name"
                        android:textColor="#000"
                        android:textStyle="bold"
                        />-->
                    <EditText
                        android:id="@+id/InsertComplaintStatusNameEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/complaint_status_name"
                        android:maxHeight="100dp"
                        android:textStyle="normal"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:importantForAutofill="no"
                        android:inputType="text" />
                    <ScrollView
                        android:id="@+id/ScrollView01"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="20dp">
                        <EditText
                            android:id="@+id/InsertComplaintComment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/comments"
                            android:textStyle="normal"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:background="@android:color/transparent"
                            android:maxHeight="200dp"
                            android:importantForAutofill="no"
                            android:inputType="text" />

                    </ScrollView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="5dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardMaxElevation="5dp"
                        app:cardCornerRadius="5dp"
                        app:cardUseCompatPadding="true"
                        android:layout_gravity="left"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginBottom="0dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/ChooseFile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/choose_file"
                                android:textStyle="bold"
                                android:background="@color/colorPrimary"
                                android:textColor="@color/colorWhite"
                                android:textAlignment="center"
                                android:padding="10dp"
                                android:maxHeight="50dp"
                                android:onClick="ChooseFile"
                                />
                            <!--<TextView
                                android:id="@+id/filePath"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:padding="10dp"
                                android:textColor="@color/colorWhite"
                                android:layout_gravity="right"
                                android:layout_weight="1"
                                android:hint="@string/file_path"
                                android:textAlignment="center"
                                android:maxHeight="50dp"
                                tools:ignore="RtlHardcoded" />-->

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <CheckBox
                        android:id="@+id/InsertComplaintCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ComplaintCheckbox"
                        android:textColor="@color/colorRed"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="5dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardMaxElevation="5dp"
                        app:cardCornerRadius="5dp"
                        app:cardUseCompatPadding="true"
                        android:background="@color/colorPrimary"
                        app:cardBackgroundColor="@color/colorPrimary"
                        android:onClick="submit"
                        android:layout_gravity="center"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginBottom="0dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/submit"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:padding="20dp" />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/InsertComplaintMsg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:visibility="invisible"
                        />
                </LinearLayout>


            </ScrollView>

        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>